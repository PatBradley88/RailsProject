<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
   <%= image_tag portfolio_img(portfolio_item.thumb_image.url, 'thumb'), width: '100%' %>
    <div class="card-body">
      <p class="card-text"><span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span></p>

      <div class="d-flex justify-content-between align-items-center">
        <p class="card-text"><%= portfolio_item.subtitle %></p>
      </div>

      <div>
      	<p><%= link_to 'Edit /', edit_portfolio_path(portfolio_item)if logged_in?(:site_admin) %> 
		       <%= link_to ' Delete', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' }if logged_in?(:site_admin) %>
		    </p>
      </div>
    </div>
  </div>
</div>
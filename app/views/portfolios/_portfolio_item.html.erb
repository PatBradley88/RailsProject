<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
   <%= image_tag portfolio_img(portfolio_item.thumb_image.url, 'thumb'), width: '100%' %>
    <div class="card-body">
      <p class="card-text"><span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span></p>
      <div class="d-flex justify-content-between align-items-center">
        <p class="card-text"><%= portfolio_item.subtitle %></p>
      </div>
    </div>
  </div>
</div>
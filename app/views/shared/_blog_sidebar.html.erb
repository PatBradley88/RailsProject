<aside class="col-md-4 blog-sidebar">
          <div class="p-4 mb-3 bg-light rounded">
            <h4 class="font-italic">About</h4>
            <p class="mb-0">This is where I write about some of the projects that I have worked on and am working on at the moment.</p>
          </div>

          <div class="sidebar-module">
            <%= source_helper("alert alert-info") %>
          </div>

          <div class="sidebar-module">
            <h4>Topics</h4>
            <% @side_bar_topics.each do |topic| %>
              <p><%= link_to topic.title, topic_path(topic) %></p>
            <% end %>
          </div>

          <div class="p-4">
            <h4 class="font-italic">Elsewhere</h4>
            <ol class="list-unstyled social-links">
              <li><a href="#"><%= fa_icon "github" %></a></li>
              <li><a href="#"><%= fa_icon "twitter", base: "square-o" %></a></li>
              <li><a href="#"><%= fa_icon "linkedin" %></a></li>
              <li><a href="#"><%= fa_icon "instagram" %></a></li>
            </ol>
          </div>
        </aside><!-- /.blog-sidebar -->